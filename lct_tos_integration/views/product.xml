<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_product_template_form_lct" model="ir.ui.view">
            <field name="name">product.template.form.lct</field>
            <field name="inherit_id" ref="account.product_normal_form_view"/>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <xpath expr="//h2[preceding::label[@for='categ_id']]" position="after">
                    <label for="lct_product_category_id" class="oe_edit_only"/>
                    <h2><field name="lct_product_category_id" widget="selection"/></h2>
                </xpath>
                <xpath expr="//field[@name='type']" position="after">
                    <field name="lct_product_service_id" widget="selection"/>
                    <field name="lct_product_size_id" widget="selection"/>
                    <field name="lct_product_status_id" widget="selection"/>
                    <field name="lct_product_type_id" widget="selection"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
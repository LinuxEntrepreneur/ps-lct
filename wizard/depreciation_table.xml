<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="depreciation_table_download" model="ir.ui.view">
            <field name="name">Depreciation Table</field>
            <field name="model">depreciation.table.download</field>
            <field name="arch" type="xml">
                <form string="Depreciation Table">
                    <field name="file_name" invisible="1"/>
                    <field name="xls_report" filename="file_name" readonly="1"/>
                </form>
            </field>
        </record>

        <record id="depreciation_table_view_togo" model="ir.ui.view">
            <field name="name">Depreciation Table</field>
            <field name="model">lct_finance.depreciation.table.report</field>
            <field name="arch" type="xml">
                <form string="Report Options" version="7.0">
                    <group col="4">
                        <field name="company_id" invisible="1"/>
                       <field name="fiscalyear_id" domain="[('company_id','=',company_id)]"/>
                    </group>
                    <notebook tabpos="up" colspan="4">
                        <page string="Filters" name="filters">
                            <group>
                                <field name="filter" on_change="onchange_filter(filter, fiscalyear_id)"/>
                            </group>
                            <group string="Dates" attrs="{'invisible':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}">
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                            <group string="Periods" attrs="{'invisible':[('filter','!=','filter_period')], 'required':[('filter', '=', 'filter_period')]}">
                                <field name="period_from" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                                <field name="period_to" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                            </group>
                        </page>
                        <page string="Journals" name="journal_ids">
                            <field name="journal_ids"/>
                        </page>
                    </notebook>
                    <footer>
                        <button name="print_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_account_report_dt" model="ir.actions.act_window">
             <field name="name">Depreciation Table</field>
             <field name="res_model">lct_finance.depreciation.table.report</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="target">new</field>
        </record>

        <menuitem name="Depreciation Table" action="action_account_report_dt" id="menu_account_report_dt" parent="account.final_accounting_reports"/>

    </data>
</openerp>

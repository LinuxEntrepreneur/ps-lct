<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="hr_payroll_base_wage_tree_view">
            <field name="name">hr.payroll.base_wage.tree</field>
            <field name="model">hr.payroll.base_wage</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Base wages">
                    <field name="base_wage"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_payroll_base_wage_form_view">
            <field name="name">hr.payroll.base_wage.form</field>
            <field name="model">hr.payroll.base_wage</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Base wage">
                    <field name="base_wage" select="1"/>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_hr_payroll_base_wage_tree_view">
            <field name="name">Base wages</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.payroll.base_wage</field>
        <!-- <field name="domain">[('field_name','condition',criteria)]</field>-->
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hr_payroll_base_wage_tree_view"/>
        </record>

        <menuitem id="hr_payroll_base_wage_menu" name="Base wages" parent="hr_payroll.payroll_configure" action="action_hr_payroll_base_wage_tree_view"/>

    </data>
</openerp>
